
<div class="container">
    <div class="row justify-content-center mt-5 ">
        <div class="col-lg-6">
            <a href="/" class="btn btn-sm btn-warning  mb-2 ">Back</a>
            <div class="card shadow ">
                <div class="card-header">
                    <h3>Add Product</h3>
                </div>
                <div class="card-body">
                    <form action="/createProduct" enctype="multipart/form-data" method="POST">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input class="form-control" type="text" name="name">
                        </div>
                        <div class="my-3">
                            <label for="">Regular Price</label>
                            <input class="form-control" type="text" name="regularPrice">
                        </div>
                        <div class="my-3">
                            <label for="">Sale Price</label>
                            <input class="form-control" type="text" name="salePrice">
                        </div>
                        <div class="my-3">
                            <label for="">Stock</label>
                            <input class="form-control" type="text" name="stock">
                        </div>
                        <div class="my-3">
                            <input class="form-control w-50 d-inline-block " type="file" accept="image/png, image/jpeg" name="productPhoto">
                        </div>
                        <button class="btn btn-sm btn-primary ">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>